<%# app/views/projects/edit.html.erb %>
<div class="container mt-5">
  <%# Add a container for responsive centering %>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%# Adjust column width as needed %>
      <div class="card">
        <div class="card-header">
          <h1 class="text-center">Edit Project</h1>
        </div>
        <div class="card-body">
          <%= form_with(model: @project, url: project_path(@project), method: :patch) do |form| %>
            <% if @project.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <h2 class="mb-3"><%= pluralize(@project.errors.count, "error") %>
                  prohibited this project from being saved:</h2>
                <ul>
                  <% @project.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%# Use mb-3 for margin-bottom on each form group %>
              <%= form.label :title, "Project Title", class: "form-label" %>
              <%# Add form-label class %>
              <%= form.text_field :title, id: "project_title", class: "form-control" %>
              <%# Add form-control class %>
            </div>

            <div class="mb-3">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description,
                             id: "project_description",
                             class: "form-control",
                             rows: 4 %>
              <%# Add rows for textarea %>
            </div>

            <div class="mb-3">
              <%= form.label :num_positions, "Number of Positions", class: "form-label" %>
              <%= form.text_field :num_positions,
                              id: "project_num_positions",
                              class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :areas_of_research, class: "form-label" %>
              <%= form.text_area :areas_of_research,
                             id: "project_areas_of_research",
                             class: "form-control",
                             rows: 4 %>
            </div>

            <div class="mb-3">
              <%= form.label :start_semester, class: "form-label" %>
              <%= form.text_field :start_semester,
                              id: "project_start_semester",
                              class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :prefered_class, "Preferred Class (Optional)", class: "form-label" %>
              <%= form.text_field :prefered_class,
                              id: "project_prefered_class",
                              class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :other_comments, "Other Comments (Optional)", class: "form-label" %>
              <%= form.text_area :other_comments,
                             id: "project_other_comments",
                             class: "form-control",
                             rows: 4 %>
            </div>

            <div class="d-grid gap-2">
              <%# Use d-grid for button layout %>
              <%= form.submit "Update Project", class: "btn btn-primary" %>
              <%# Add btn and btn-primary classes %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <%# Add margin-top and center the links %>
            <%= link_to "Back to Project", @project, class: "btn btn-secondary me-2" %>
            <%# Add btn and btn-secondary classes %>
            <%= link_to "Back to Projects List", projects_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
