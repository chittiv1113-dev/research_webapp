<div class="container mt-4">
  <h1 class="text-center mb-4">New Admin</h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @admin, local: true) do |f| %>
        <% if @admin.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@admin.errors.count, "error") %> prohibited this admin from being saved:</h4>
            <ul>
              <% @admin.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :email, "Email (Required)", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :name, "Name (Optional)", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="text-center">
          <%= link_to "Back to Admin List", admins_path, class: "btn btn-warning" %>
          <%= f.submit "Create Admin", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
