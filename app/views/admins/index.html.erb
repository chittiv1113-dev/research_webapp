<div class="container mt-4">
  <h1 class="text-center mb-4">Admin List</h1>

  <div class="mb-3">
    <%= link_to "Back to Admin Dashboard", admin_dashboard_path, class: "btn btn-warning" %>
    <%= link_to "New Admin", new_admin_path, class: "btn btn-success" %>
  </div>

  <table class="table table-bordered table-striped text-center align-middle">
    <thead class="table-dark">
      <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if @admins.any? %>
        <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.user.email %></td>
            <td><%= admin.user.name.presence || "N/A" %></td>
            <td>
              <div class="d-flex justify-content-center gap-2">
                <%= link_to "Edit", edit_admin_path(admin), class: "btn btn-primary me-2" %>
                <%= button_to "Delete",
                              admin_path(admin),
                              method: :delete,
                              data: { confirm: "Are you sure?" },
                              class: "btn btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="3">No admins available.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
